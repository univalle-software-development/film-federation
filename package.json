{
  "name": "film-platform-microfrontends",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:shell": "npm run start --workspace=shell",
    "dev:catalog": "npm run start --workspace=mfe-film-catalog",
    "dev:details": "npm run start --workspace=mfe-film-details",
    "dev:userRegistration": "npm run start --workspace=mfe-user-registration",
    "dev:all": "npm-run-all --parallel dev:catalog dev:shell dev:details dev:userRegistration",
    "build:shell": "npm run build --workspace=shell",
    "build:catalog": "npm run build --workspace=mfe-film-catalog",
    "build:details": "npm run build --workspace=mfe-film-details",
    "build:userRegistration": "npm run build --workspace=mfe-user-registration",
    "build:all": "npm-run-all build:catalog build:details build:shell build:userRegistration"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@module-federation/enhanced": "^0.17.0",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-loader": "^8.1.1",
    "process": "^0.11.10",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.3",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.0"
  }
}
