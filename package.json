{
  "name": "film-platform-microfrontends",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:shell": "npm run start --workspace=shell",
    "dev:catalog": "npm run start --workspace=mfe-film-catalog",
    "dev:details": "npm run start --workspace=mfe-film-details",
    "dev:all": "npm-run-all --parallel dev:catalog dev:shell dev:details",
    "build:shell": "npm run build --workspace=shell",
    "build:catalog": "npm run build --workspace=mfe-film-catalog",
    "build:details": "npm run build --workspace=mfe-film-details",
    "build:all": "npm-run-all build:catalog build:details build:shell"
  },
  "devDependencies": {
    "@babel/core": "^7.27.3",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "autoprefixer": "^10.4.19",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "process": "^0.11.10",
    "tailwindcss": "^3.4.3"
  }
}
